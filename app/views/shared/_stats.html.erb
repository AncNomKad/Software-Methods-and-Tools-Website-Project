<% @ship ||= current_ship %>
<div class="stats">
  <a href="<%= following_user_path(@ship) %>">
    <strong id="following" class="stat">
      <%= @ship.followed_ships.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_ship_path(@ship) %>">
    <strong id="followers" class="stat">
      <%= @ship.followers.count %>
    </strong>
    followers
  </a>
</div>
